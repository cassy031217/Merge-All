@model MemberPortal.Models.LoanApplication

@{
    ViewBag.Title = "Approved";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}



<link href="~/Css/StyleSheet1.css" rel="stylesheet" />
<div id="main-wrapper">
    <div class="page-content container-fluid">
        <div class="page-wrapper">
            <!-- ============================================================== -->
            <!-- Start Page Content -->
            <!-- ============================================================== -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">

                            <div>
                                <div class="row">
                                    <div class="col-md-8 col-sm-8 col-md-offset-2 col-sm-offset-2">
                                        <div class="main-heading-content text-left text-info">

                                            <br />
                                            <br />
                                            <br />
                                            <h1>Online Loan Application</h1>

                                            <p>Fill-up the application form and submit the required documents.</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-20">
                                    <nav>
                                        <ol class="cd-multi-steps text-bottom count">
                                            <li class="visited"><a href="#">Application</a></li>
                                            <li class="visited"><a href="#">Requirements</a></li>
                                            <li class="visited"><em>Verification</em></li>
                                            <li class="visited"><em>Evaluation</em></li>
                                            <li class="current"><em>Approval</em></li>
                                            <li><em>Released</em></li>
                                        </ol>
                                    </nav>

                                    <br />
                                    <br />
                                    <div class="row">
                                        <div class="contact-main-wrapper clearfix">
                                            <div class="contact-form-wrapper mb-10">
                                                <div class="contact-form">
                                                    @using (Html.BeginForm("Approved", "LoanApplications"))
                                                    {
                                                        @Html.AntiForgeryToken()
                                                        <div class="text-center">
                                                            <img src="../../Img/Assessments/Approved.PNG" alt="...">
                                                            <br />
                                                        </div>
                                                        <br />
                                                        <div class="form-group">
                                                            Remarks: <br />
                                                            &nbsp;@Html.TextAreaFor(model => model.ApproverRemarks, 7, 130, new { @disabled = "disabled" })
                                                        </div>
                                                        <br />
                                                        <div class="text-center">
                                                            <input type="button" class="btn btn-outline-primary btn-lg" value="Back" onclick="@("window.location.href='" + @Url.Action("Index", "LoanApplications") + "'");" />
                                                            <br /><br />
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>

    </div>
</div>