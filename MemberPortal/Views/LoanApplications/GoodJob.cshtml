                                                <div class="text-center">
                                                    <img src="../../Img/Assessments/GoodJob.png" alt="...">
                                                </div>
                                                <div class="text-center">
                                                    <input type="button" class="btn btn-outline-primary btn-lg" value="Back" onclick="@("window.location.href='" + @Url.Action("Create", "LoanApplications") + "'");" />
