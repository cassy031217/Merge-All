@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}


<div class="page-wrapper">

    <div class="page-breadcrumb bg-light">
        <div class="row">
            <div class="col-lg-3 col-md-4 col-xs-12 align-self-center">
                <h5 class="font-medium text-uppercase mb-0">Dashboard</h5>
            </div>
            <div class="col-lg-9 col-md-8 col-xs-12 align-self-center">
                <nav aria-label="breadcrumb" class="mt-2 float-md-right float-left">
                    <ol class="breadcrumb mb-0 justify-content-end p-0 bg-light">
                        <li class="breadcrumb-item">Home</li>
                        <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <div class="page-content container-fluid">
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <!-- Row -->
        <div class="row">

            <div class="col-lg-10 col-xlg-9 col-md-7">

                <div class="card">
                    <!-- Tabs -->
                    <h5 class="card-title text-uppercase p-3 bg-info text-white mb-0">
                        Notification
                    </h5>
                    <div class="page-content container-fluid">
                        <div class="card-body">

                            <h3>Hi! @MemberPortal.Models.Global.AccountName</h3>
                            <hr>
                            @*<h5><b>Last Log on:</b> Monday, April 15, 2019, 01:27:30 PM (Manila Time GMT + 8). You had 0 invalid attempt/s before log-on.</h5>*@
                            <h5><b>Last Log on:</b> @ViewBag.LastLogin (Manila Time GMT + 8).</h5>
                            <h5><b>Last Password Change:</b>  Friday, April 12, 2019, 7:41:48 PM (Manila Time GMT + 8).</h5>
                            <br />
                            <h5>For your protection, please change your password.</h5>
                            <hr>
                            <div class="row mb-3">
                                <div class="col-md-6 themed-grid-col">

                                    <div class="card">
                                        <h4 class="card-title text-uppercase p-3 bg-info text-white mb-0">Transaction Summary</h4>
                                        <div class="card-body bg-light">
                                            <div class="d-flex align-items-center py-3">
                                                <div class="user-img">
                                                    <span class="btn btn-primary btn-circle btn-lg">
                                                        <i class="far fa-bell text-white"></i>
                                                    </span>
                                                </div>
                                                <div class="ml-3">
                                                    <h4 class="card-title">Savings Transaction As Of Today</h4>
                                                </div>
                                                <div class="ml-auto">
                                                    <h2 class="mb-0 text-primary font-medium">0</h2>
                                                </div>
                                            </div>

                                            <div class="d-flex align-items-center py-3">
                                                <div class="user-img">
                                                    <span class="btn btn-success btn-circle btn-lg">
                                                        <i class="far fa-bell text-white"></i>
                                                    </span>
                                                </div>
                                                <div class="ml-3">
                                                    <h4 class="card-title">Share Capital Transaction As Of Today</h4>
                                                </div>
                                                <div class="ml-auto">
                                                    <h2 class="mb-0 text-primary font-medium">0</h2>
                                                </div>
                                            </div>

                                            <div class="d-flex align-items-center py-3">
                                                <div class="user-img">
                                                    <span class="btn btn-warning btn-circle btn-lg">
                                                        <i class="far fa-bell text-white"></i>
                                                    </span>
                                                </div>
                                                <div class="ml-3">
                                                    <h4 class="card-title">Time Deposit Transaction As Of Today</h4>
                                                </div>
                                                <div class="ml-auto">
                                                    <h2 class="mb-0 text-primary font-medium">0</h2>
                                                </div>
                                            </div>

                                            <div class="d-flex align-items-center py-3">
                                                <div class="user-img">
                                                    <span class="btn btn-info btn-circle btn-lg">
                                                        <i class="far fa-bell text-white"></i>
                                                    </span>
                                                </div>
                                                <div class="ml-3">
                                                    <h4 class="card-title">Loan Transaction As Of Today</h4>
                                                </div>
                                                <div class="ml-auto">
                                                    <h2 class="mb-0 text-primary font-medium">0</h2>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-md-6 themed-grid-col">

                                    <div class="card">
                                        <h4 class="card-title text-uppercase p-3 bg-info text-white mb-0">
                                            Pending Loan Application
                                        </h4>
                                        <div class="card-body bg-light">
                                            <div class="d-flex align-items-center py-3">
                                                <div class="user-img">
                                                    <span class="btn btn-danger btn-circle btn-lg">
                                                        <i class="far fa-bell text-white"></i>
                                                    </span>
                                                </div>
                                                <div class="ml-3">
                                                    <h6 class="card-title">Ongoing Online Loan Application</h6>
                                                </div>
                                                <div class="ml-auto">
                                                    <h2 class="mb-0 text-primary font-medium">0</h2>
                                                </div>
                                            </div>
                                         
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
