@model IEnumerable<MemberPortal.Models.usp_GetMemberAcctLedger_Result2>

@{
    ViewBag.Title = "Loan Acccount History";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<link href="~/assets/extra-libs/datatables.net-bs4/css/dataTables.bootstrap4.css" rel="stylesheet" />
<link href="~/Content/style1.min.css" rel="stylesheet" />


<div class="page-wrapper">

    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-lg-3 col-md-4 col-xs-12 align-self-center">
                <h5 class="font-medium text-uppercase mb-0">Loan Account History</h5>
            </div>
            <div class="col-lg-9 col-md-8 col-xs-12 align-self-center">
                <nav aria-label="breadcrumb" class="mt-2 float-md-right float-left">
                    <ol class="breadcrumb mb-0 justify-content-end p-0">
                        <li class="breadcrumb-item">Home</li>
                        <li class="breadcrumb-item active" aria-current="page">Loan Account History</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>


    <div class="page-content container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="material-card card">
                    <div class="card-body">
                        <h4 class="card-title">Savings Account History</h4>
                        <h6 class="card-subtitle">The list below shows the status of your history accounts.</h6>
                        <hr />
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card">

                                    <div class="form">
                                        <div class="row">
                                            <!-- Column -->
                                            <div class="col-md-9 col-lg-9">

                                                <div class="card bg-info">
                                                    <div class="card-body text-white">
                                                        <div class="d-flex flex-row">
                                                            <div class="display-6 align-self-center">@*<i class="ti-calendar"></i>*@</div>
                                                            <div class="p-2 align-self-center">
                                                                <h4 class="mb-0">@ViewBag.ProdDescription</h4>
                                                                <span>Acct No: @ViewBag.AcctNo</span>
                                                                <br />
                                                                @*<br />*@
                                                                <span class="font-500"><a href="@Url.Action("LoanAcct", "SOA",new { accountName = ViewBag.ProdDescription, acctno = ViewBag.AcctNo })" class="text-white">My Statement</a></span>
                                                                @*<h5 class="mb-0">Date Release: 01/15/2018</h5>
                                                                <h5 class="mb-0">Maturity Date: 03/15/2019</h5>*@
                                                                @*<h5 class="mb-0">Period Covered: 12/22/2018 - 02/19/2019</h5>*@
                                                                @*<br />
                                                                <span class="font-500"><a href="@Url.Action("LoanAcct", "SOA")" class="text-white">My Statement</a></span>*@
                                                            </div>
                                                            <div class="ml-auto align-self-center">
                                                                <h2 class="font-medium mb-0">@String.Format("{0:C}", ViewBag.Balance) </h2>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="card">
                                                    <div class="card-header bg-info">
                                                        <h5 class="mb-0 text-white">Details</h5>
                                                    </div>
                                                    <div class="card-body">
                                                        <div class="table-responsive">
                                                            <table class="table product-overview">
                                                                <thead>
                                                                    <tr>
                                                                        <th style="text-align:center">Date</th>
                                                                        <th style="text-align:center" width="300">Description</th>
                                                                        <th style="text-align:center">Ref No</th>
                                                                        <th style="text-align:center" width="130">Principal Paid</th>
                                                                        <th style="text-align:center" width="130">Interest Paid</th>
                                                                        <th style="text-align:center" width="130">Penalty Paid</th>
                                                                        <th style="text-align:center" width="180">Balance</th>

                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    @foreach (var item in Model)
                                                                    {
                                                                        <tr>
                                                                            <td style="text-align:center">@Html.DisplayFor(modelItem => item.TransactionDate)</td>
                                                                            <td style="text-align:left">@Html.DisplayFor(modelItem => item.Description)</td>
                                                                            <td style="text-align:center">@Html.DisplayFor(modelItem => item.ReferenceNumber)</td>
                                                                            <td style="text-align:center">@String.Format("{0:0,0.00}", item.Principal)</td>
                                                                            <td style="text-align:center">@String.Format("{0:0,0.00}", item.Interest)</td>
                                                                            <td style="text-align:center">@String.Format("{0:0,0.00}", item.Penalty)</td>
                                                                            <td style="text-align:center">@String.Format("{0:0,0.00}", item.PrincipalEnding)</td>
                                                                        </tr>
                                                                    }

                                                                </tbody>
                                                            </table>
                                                            <table class="table product-overview">
                                                                <thead>
                                                                    <tr class="text-white">
                                                                        <th style="text-align:center"> </th>
                                                                        <th style="text-align:center" width="300"> </th>
                                                                        <th style="text-align:center"> </th>
                                                                        <th style="text-align:center" width="170"> </th>
                                                                        <th style="text-align:center" width="120"> </th>
                                                                        <th style="text-align:center" width="180"> </th>
                                                                        <th style="text-align:center" width="180"> </th>


                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    <tr>
                                                                        <td style="text-align:center"></td>
                                                                        <td style="text-align:left">Total Principal Paid</td>
                                                                        <td style="text-align:right">@String.Format("{0:0,0.00}", ViewBag.totalPrincipalPaid)</td>
                                                                        <td style="text-align:center"></td>
                                                                        <td style="text-align:right"></td>
                                                                        <td style="text-align:right"></td>
                                                                        <td style="text-align:right"></td>


                                                                    </tr>
                                                                    <tr>
                                                                        <td style="text-align:center"></td>
                                                                        <td style="text-align:left">Total Interest Paid</td>
                                                                        <td style="text-align:right">@String.Format("{0:0,0.00}", ViewBag.totalInterestPaid)</td>
                                                                        <td style="text-align:center"></td>
                                                                        <td style="text-align:right"></td>
                                                                        <td style="text-align:right"></td>
                                                                        <td style="text-align:right"></td>


                                                                    </tr>
                                                                    <tr>
                                                                        <td style="text-align:center"></td>
                                                                        <td style="text-align:left">Total Penalty</td>
                                                                        <td style="text-align:right">@String.Format("{0:0,0.00}", ViewBag.totalPenalty)</td>
                                                                        <td style="text-align:center"></td>
                                                                        <td style="text-align:right"></td>
                                                                        <td style="text-align:right"></td>
                                                                        <td style="text-align:right"></td>


                                                                    </tr>
                                                                    <tr>
                                                                        <td style="text-align:center"></td>
                                                                        <td style="text-align:left">No. Principal Paid</td>
                                                                        <td style="text-align:right">@ViewBag.countPrincipalPaid</td>
                                                                        <td style="text-align:center"></td>
                                                                        <td style="text-align:right"></td>
                                                                        <td style="text-align:right"></td>
                                                                        <td style="text-align:right"></td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td style="text-align:center"></td>
                                                                        <td style="text-align:left">No. Interest Paid</td>
                                                                        <td style="text-align:right">@ViewBag.countInterestPaid</td>
                                                                        <td style="text-align:center"></td>
                                                                        <td style="text-align:right"></td>
                                                                        <td style="text-align:right"></td>
                                                                        <td style="text-align:right"></td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td style="text-align:center"></td>
                                                                        <td style="text-align:left">No. Penalty</td>
                                                                        <td style="text-align:right">@ViewBag.countPenalty</td>
                                                                        <td style="text-align:center"></td>
                                                                        <td style="text-align:right"></td>
                                                                        <td style="text-align:right"></td>
                                                                        <td style="text-align:right"></td>
                                                                    </tr>
                                                                </tbody>
                                                            </table>


                                                            <hr>
                                                            <div class="d-flex no-block align-items-center">
                                                                <div class="ml-auto">
                                                                    @*<a href="javascript:window.print()" class="btn btn-success" align="center">Print</a> | <a href="@Url.Action("Index", "Transaction")" class="btn btn-primary" align="center">View Other Account</a>*@
                                                                    <a href="@Url.Action("Index", "Transaction")" class="btn btn-primary" align="center">View Other Account</a>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <hr />
                                                        <div class="col-md-11">
                                                            <div class="alert alert-warning" role="alert">
                                                                <label class="text-danger"><b>Reminders</b></label>
                                                                <ul>
                                                                    <li><small class="form-text text-dark">Beginning and Ending Balance are the starting balance and end of day balance of your account based in the date range you have specified.</small> </li>
                                                                    <li><small class="form-text text-dark">All transactions done after system cut-off(about 10:00 PM - Manila Time) will be reflected the next day.</small></li>
                                                                    <li><small class="form-text text-dark">Scheduled transactions effected today will be reflected tommorrow.</small></li>
                                                                    <li><small class="form-text text-dark">Please check this statement and report immediately any discrepancy to the coop.</small></li>
                                                                    <li><small class="form-text text-dark">Please advise us of any change of address and contact numbers.</small></li>
                                                                </ul>
                                                            </div>
                                                        </div>


                                                    </div>
                                                </div>
                                            </div>
                                            <!-- Column -->
                                        </div>

                                    </div>

                                    @*card*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


